<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmRatingApp"
        tools:targetApi="31">
        <activity
            android:name=".ux.LoadingActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.DetalhesFilmeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TelaPerfilDadosActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TelaCadastroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TelaLoginActivity"
            android:exported="false"
            android:label="@string/title_tela_login"
            android:theme="@style/Theme.FilmRatingApp"/>
        <activity
            android:name=".ui.TelaPerfilActivity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="false"
            android:label="@string/title_activity_tela_perfil"
            android:theme="@style/Theme.FilmRatingApp" />
        <activity
            android:name=".ui.TelaPrincipal_Activity"
            android:configChanges="orientation|screenSize|screenLayout|keyboardHidden"
            android:exported="false"
            android:label="@string/title_activity_tela_principal"
            android:theme="@style/Theme.FilmRatingApp" />
    </application>

</manifest>