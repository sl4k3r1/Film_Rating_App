<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:id="@+id/iconefilme"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="180dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:radius="20dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imagemfilme"
                android:layout_width="120dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/nome_filme"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/imagemfilme"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="Uranio" />

            <ImageButton
                android:id="@+id/favorito_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/imagemfilme"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="3dp"
                android:layout_toStartOf="@+id/salvar_icon"
                android:gravity="center"
                android:src="@drawable/ic_action_favorite_border"
                app:tint="#968585"
                tools:src="@drawable/ic_action_favorite_border" />

            <ImageButton
                android:id="@+id/salvar_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_below="@+id/imagemfilme"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="2dp"
                android:src="@drawable/ic_stat_bookmark_border"
                app:tint="#C1BCBC"
                tools:src="@drawable/ic_stat_bookmark_border" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>
